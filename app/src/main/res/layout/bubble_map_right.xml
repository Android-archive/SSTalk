<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/container_map_right"

    android:layout_height="wrap_content">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:drawableLeft="@drawable/shape_line"
            android:drawableRight="@drawable/shape_line"
        android:id="@+id/header_map_right"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="@string/app_name"
        />



   <LinearLayout android:layout_width="match_parent"
                 android:orientation="vertical"
                 android:padding="3dp"
                 android:layout_height="wrap_content"
                 android:id="@+id/message_layout_map_right">


       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:background="@drawable/bg_custom_outcoming_message"
        android:layout_height="wrap_content">


        <LinearLayout android:layout_width="200dp"
                      android:id="@+id/map_container_right"
                      android:layout_height="180dp"
                      android:orientation="vertical">

            <com.google.android.gms.maps.MapView
                    android:layout_width="match_parent"
                    android:id="@+id/mapview_right"
                    map:cameraZoom="15"
                    map:mapType="normal"
                    map:liteMode="true"
                    android:layout_height="match_parent"

            />


        </LinearLayout>




        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:maxWidth="200dp"
                android:autoLink="all"
                android:id="@+id/messageText_map_right"
            android:textColor="@color/white"
            />


    </LinearLayout>


    <LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
                  android:paddingTop="2dp"
                  android:orientation="horizontal"
                  android:layout_gravity="end">

        <ImageView android:layout_width="16dp"
                   android:id="@+id/delivery_status_map_right"
                   android:layout_gravity="center"
                   android:layout_marginRight="4dp"
                   android:src="@drawable/ic_delivered_tick"
                   android:layout_height="16dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="12:10 PM"
                android:textSize="10sp"
                android:id="@+id/time_map_right"
                android:paddingRight="15dp"
                android:textColor="@color/warm_grey"
        />
    </LinearLayout>
   </LinearLayout>


</LinearLayout>