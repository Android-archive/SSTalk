<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:id="@+id/header_right"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="@string/app_name"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:background="@drawable/bg_custom_outcoming_message"
        android:layout_height="wrap_content">


             <FrameLayout
              android:layout_width="200dp"
              android:id="@+id/imageFrameLayoutRight"
              android:layout_height="180dp">


                     <ImageView
                     android:layout_width="200dp"
                     android:layout_height="180dp"
                     android:scaleType="centerCrop"
                     android:paddingTop="5dp"
                     android:background="@color/white"
                     android:src="@drawable/placeholder_image"
                     android:id="@+id/imageview_right"
                     />

          <ProgressBar android:layout_width="wrap_content"
                       android:layout_gravity="center"
                       android:id="@+id/progress_bar_right"
                       style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                       android:layout_height="wrap_content"/>

          <TextView android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/white"
                    android:id="@+id/tap_retry_right"
                    android:text="Tap to Retry"
                    android:background="@drawable/blurred_text_background"
                    android:padding="20dp"
                    android:alpha="0.8"
          />




      </FrameLayout>



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:maxWidth="200dp"
                android:autoLink="all"
                android:text="Caption is used for image asasfasfasfasfasfasfasfasfasfasfasfwhich is not optional"
                android:id="@+id/messageText_right"
            android:textColor="@color/white"
            />


    </LinearLayout>


    <LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
                  android:paddingTop="2dp"
                  android:orientation="horizontal"
                  android:layout_gravity="end">

        <ImageView android:layout_width="46dp"
                   android:id="@+id/delivery_status"
                   android:layout_gravity="center"
                   android:layout_marginRight="4dp"
                   android:layout_height="46dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:text="12:10 PM"
                android:textSize="10sp"
                android:id="@+id/time_right"
                android:paddingRight="15dp"
                android:textColor="@color/warm_grey"
        />
    </LinearLayout>


</LinearLayout>