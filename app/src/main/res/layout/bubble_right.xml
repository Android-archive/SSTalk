<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:id="@+id/header_right"
        android:layout_gravity="center"
        android:textColor="@color/black"
        android:text="@string/app_name"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_gravity="end"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:background="@drawable/bg_custom_outcoming_message"
        android:layout_height="wrap_content">


      <FrameLayout android:layout_width="200dp"
                   android:id="@+id/imageFrameLayoutRight"
                   android:layout_height="180dp">

          <ProgressBar android:layout_width="wrap_content"
                       android:layout_gravity="center"
                       android:id="@+id/progress_bar_right"
                       style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                       android:layout_height="wrap_content"/>

          <ImageView android:layout_width="200dp"
                   android:layout_height="180dp"
                   android:scaleType="center"
                   android:paddingTop="5dp"
                   android:id="@+id/imageview_right"
                />

      </FrameLayout>



        <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:maxWidth="200dp"
                android:autoLink="all"
                android:text="Caption is used for image asasfasfasfasfasfasfasfasfasfasfasfwhich is not optional"
                android:id="@+id/messageText_right"
            android:textColor="@color/white"
            />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="12:10 PM"
        android:paddingTop="2dp"
        android:id="@+id/time_right"
        android:paddingRight="15dp"
        android:textColor="@color/warm_grey"
        />


</LinearLayout>