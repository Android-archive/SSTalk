<?xml version="1.0" encoding="utf-8"?>


<LinearLayout android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:orientation="vertical"
              android:id="@+id/container_left"
              xmlns:android="http://schemas.android.com/apk/res/android">



    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:drawableLeft="@drawable/shape_line"
            android:drawableRight="@drawable/shape_line"
            android:id="@+id/header_left"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="21 jan 19"
    />



    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="match_parent"
                  android:orientation="horizontal"
                  android:id="@+id/message_layout_text_left"
                  xmlns:android="http://schemas.android.com/apk/res/android">


        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_marginLeft="2dp"
                android:id="@+id/circle_sender_text"
                android:src="@drawable/contact_placeholder"
                android:layout_height="50dp"/>


        <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:padding="3dp"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginRight="50dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:background="@drawable/shape_bubble_left"
                    android:layout_height="wrap_content">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:padding="5dp"
                        android:layout_weight="1"
                        android:maxWidth="200dp"
                        android:autoLink="all"
                        android:text="Caption is used for image asasfasfasfasfasfasfasfasfasfasfasfwhich is not optional"
                        android:id="@+id/messageText_left"
                />


            </LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12:10 PM"
                    android:paddingTop="2dp"
                    android:textSize="10sp"
                    android:paddingLeft="10dp"
                    android:id="@+id/time_left"
                    android:textColor="@color/warm_grey"
            />


        </LinearLayout>


    </LinearLayout>



</LinearLayout>


